 <%= form_for @story, :html => { :class => "form-horizontal story" } do |f| %>

   

  <div class="control-group">
    <%= f.label :heading, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :heading, :class => 'form-control' , :placeholder => "Give a Attractive heading" %>
    </div>
    <%= error_span(@story[:heading]) %>
  </div>
 <div class="control-group">
    <%= f.label :describtion, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :describtion, :class => 'form-control' , :placeholder => "Write something interesting about you, something you did.. etc." %>
    </div>
    <%= error_span(@story[:describtion]) %>
  </div>
  <div class="control-group">
   
    <div class="controls">
      
    </div>
    
  </div>


  <%= f.submit nil, :class => 'btn btn-primary' %>
 

<% end %>