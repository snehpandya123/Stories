
<div class="container">
  <div class="container">
    <div class="row">
      <div class="row">
        <div class="col-md-12">
          <div class="box">
            <div class="box-content">
              <center><h1 class="tag-title"><%= @story.heading.capitalize %>..!!</h1></center>
              <hr>
          <div class="row">
            <div class="col-md-3">
              <div class="list-group">
                <a href="" class="list-group-item visitor">
                    <h3 class="pull-right">
                        <i class="fa fa-eye"></i>
                    </h3>
                    <h4 class="list-group-item-heading count">
                       <% if user_signed_in? %>
                        <% if current_user.likes @story %>
                          <div class="span1">
                      
                           <h4><%= @story.get_likes.size %></h4>
                              </div>
                   
                        <% end %>
                    <% end -%>
                  </h4>
                    <p class="list-group-item-text">
                        Unique Views</p>
                </a>
            </div>
          
        </div>
         <div class="col-md-3">
            
          
        </div> <div class="col-md-3">
            
          
        </div>
        
        <% if current_user && !current_user.voted_for?(@story) %> <div class="col-md-3">
            <div class="list-group">
               <b href="" class="list-group-item visitor">
                    <h4 class="pull-right">
                     
                     <p id='votes'>

                      <%= pluralize @story.reputation_for(:votes).to_i, "Appreciations" %></p>
                        <h4><%= link_to '<i class="fa fa-thumbs-up"></i>
'.html_safe, vote_story_path(@story, type: "up"), method: :post , remote: true , :class => "btn btn-sm btn-hover btn-success"%>
                        <%= link_to '<i class="fa fa-thumbs-down"></i>
'.html_safe, vote_story_path(@story, type: "down"), method: :post , remote: true , :class => "btn btn-sm btn-hover btn-danger"%>
                    </h4>
                    <h4 class="list-group-item-heading count">
                      </h4>
                    <p class="list-group-item-text">
                    </p>
                </b>
                
            </div>
          <%  end %>
        </div>
       
    </div><hr>
                            <h4> <%= @story.describtion.capitalize %>
                            </h4>
                            <hr>
                            
                        </div>
                    </div>
                </div>
                
                
            </div>           
        </div>
