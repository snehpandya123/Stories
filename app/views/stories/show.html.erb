                    </h4>
                    <h4 class="list-group-item-heading count">
                      </h4>
                    <p class="list-group-item-text">
                      </p>
                </b>
                <%  end %>
            </div>
          
        </div>
       
    </div>
        
            <h3><%= @story.describtion.capitalize %></h3>
            
            <div class="pull-right">
                        <button class="btn btn-primary" data-toggle="modal" data-target="#myModal">Give Suggestion</button>
                    </div>
      </div> 
                <%= social_share_button_tag("#{@story.heading}" , :url => "http://www.pandsoft.com/stories/#{@story.id}") %> 
            
            </div>
            
                

 

