<div class="carousel fade-carousel slide" data-ride="carousel" data-interval="3000" id="bs-carousel">
  <!-- Overlay -->
  <div class="overlay"></div>

  <!-- Indicators -->
  <ol class="carousel-indicators">
    <li data-target="#bs-carousel" data-slide-to="0" class="active"></li>
    <li data-target="#bs-carousel" data-slide-to="1"></li>
    <li data-target="#bs-carousel" data-slide-to="2"></li>
  </ol>
  
  <!-- Wrapper for slides -->
  <div class="carousel-inner">
    <div class="item slides active">
      <div class="slide-1"></div>
      <div class="hero">
        <hgroup>
            <h1>Create your life</h1>        
            
        </hgroup>
        <% if user_signed_in? %>
         <%= link_to "My Life" , folders_path , :class => "btn btn-hero btn-lg" %>
        <% else %>
        <%= link_to "Register" , new_user_registration_path , :class => "btn btn-hero btn-lg" %>
        <%= link_to "Login" , new_user_session_path , :class => "btn btn-info btn-lg" %>
      <% end %>
 </div>
    </div>
    <div class="item slides">
      <div class="slide-2"></div>
      <div class="hero">        
        <hgroup>
            <h1>Tell us Phase of your life</h1>        
           
        </hgroup>       
        <% if user_signed_in? %>
         <%= link_to "My Life" , folders_path, :class => "btn btn-hero btn-lg" %>
        <% else %>
        <%= link_to "Register" , new_user_registration_path , :class => "btn btn-hero btn-lg" %>
        <%= link_to "Login" , new_user_session_path , :class => "btn btn-info btn-lg" %>
      <% end %></div>
    </div>
    <div class="item slides">
      <div class="slide-3"></div>
      <div class="hero">        
        <hgroup>
            <h1>Write a detail stories in that Phase</h1>        
           
        </hgroup>
         <% if user_signed_in? %>
         <%= link_to "My Life" , folders_path , :class => "btn btn-hero btn-lg" %>
        <% else %>
        <%= link_to "Register" , new_user_registration_path , :class => "btn btn-hero btn-lg" %>
        <%= link_to "Login" , new_user_session_path , :class => "btn btn-info btn-lg" %>
      <% end %>
      </div>
    </div>
  </div> 
</div>
  <p id ="about" > </p>
    <hr class="featurette-divider">
    
    <div class="container marketing">
      <div class="row">
        <div class="btn-group btn-group-justified">
          <div class="btn-group">               
             <button type="button" class="btn btn-nav active">
                    <h3><%= @userss %> Users..</h3>
                </button>
          </div>
          
          <div class="btn-group">
                <button type="button" class="btn btn-nav active">
                    <h3><%= @folders.count %> Lives..</h3>
                </button>
          </div>
            
          <div class="btn-group">
              <button type="button" class="btn btn-nav active">
                  <h3><%= @phase.count %> Phases..</h3>
              </button>
          </div>
          
          <div class="btn-group">
            <button type="button" class="btn btn-nav active">
                  <h3><%= @stories.count %> Stories..</h3>
            </button>
          </div>
        </div>
      </div>
   </div><!-- End row -->
    
